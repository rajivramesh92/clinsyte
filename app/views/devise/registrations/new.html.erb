<div class="authform">
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form'}) do |f| %>
    <h3>Sign up</h3>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :role %>
      <%= f.select :role, options_for_select(User.roles.map {|k, v| [k.humanize.capitalize, k]}, include_blank: true, required: true) %>
    </div>
    <div class="form-group">
      <%= f.label :uuid %>
      <%= f.text_field :uuid, class: 'form-control', readonly: true %>
    </div>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, :autofocus => true, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :first_name %>
      <%= f.text_field :first_name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :last_name %>
      <%= f.text_field :last_name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :gender %>
      <%= f.text_field :gender, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :ethnicity %>
      <%= f.text_field :ethnicity, class: 'form-control' %>
    </div>
    <div class="form-group select-date-wrapper">
      <%= f.label :birthdate %>
      <%= f.date_select :birthdate, prompt: { day: 'Day', month: 'Month', year: 'Year' }, end_year: 1900, start_year: Date.today.year, order: [:month, :day, :year], required: true, class: 'form-control select-date' %>
    </div>

    <%= f.submit 'Sign up', :class => 'button right' %>
  <% end %>
</div>
